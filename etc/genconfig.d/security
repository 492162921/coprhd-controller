_securetty() {
cat << EOF
#
# This file contains the device names of tty lines (one per line,
# without leading /dev/) on which root is allowed to login.
#
EOF
[ "${_GENCONFIG_system_permit_root_console}" = "yes" ] && echo "tty1"
}

_gen_securetty() {
   case ${_GENCONFIG_node_id} in 'standalone') _genconfig_done ; esac

   local permit_root_console=${_GENCONFIG_system_permit_root_console}
   local securetty=$(_securetty <"$1")
    _genconfig_write 600 root:root "${1}" "${securetty}"
    _genconfig_done
}

# This method can be dropped once we have an image
# with fix.sh changes
_passwd() {
    while read line ; do case ${line} in
        svcuser:*)   echo "svcuser:x:1001:100:Appliance Maintenance:/home/svcuser:/bin/bash" ;;
        *)           echo "${line}"                        ;;
    esac ; done
}

_gen_passwd() {
    passwd=$(_passwd <"${1}")
    _genconfig_write 644 root:root "${1}" "${passwd}"
    _genconfig_done
}

# Add user svcuser if it does not exist
_gen_svcuser() {
    getent passwd svcuser >&/dev/null || useradd svcuser -c "Appliance Maintenance" -d /home/svcuser -m
    usermod svcuser -u 1001 -s /usr/bin/rbash
    chmod 750 /home/svcuser
    chmod 640 /home/svcuser/.bashrc
    _genconfig_done
}

# Add user and group storageos if they do not exist
_gen_storageos() {
    getent group  storageos >&/dev/null || groupadd -g 444 storageos
    getent passwd storageos >&/dev/null || useradd -r -d /opt/storageos -c "StorageOS"   -g 444 -u 444 -s /bin/bash storageos
    _genconfig_done
}

_genconfig_exec _gen_svcuser
_genconfig_exec _gen_storageos
. /etc/genconfig.d/ssh
. /etc/genconfig.d/password
_genconfig_exec _gen_securetty           /etc/securetty
_genconfig_exec _gen_passwd              /etc/passwd
