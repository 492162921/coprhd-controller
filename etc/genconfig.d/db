_get_dbvar_props() {
    for i in ${_GENCONFIG_node_indexes} ; do
        local var="_GENCONFIG_network_${i}_ipaddr_service"
        echo "network_${i}_ipaddr_service=${!var}"
    done
    
    _get_props vdc_myid node_id node_index network_vip_service site_is_standby site_myid
}

_get_db_jmx_props() {
    echo "network_ipaddr_service=${_GENCONFIG_network_ipaddr_service}"
}

_get_dbconf_props() {
    if [ -e "/data/db/no_db_encryption" ]; then
        echo "db_encryption=none"
    else
        echo "db_encryption=all"
    fi
    echo "dbclient_encrypt=false"

    for i in ${_GENCONFIG_node_indexes} ; do
        local var="_GENCONFIG_network_${i}_ipaddr_service"
        echo "network_${i}_ipaddr_service=${!var}"
    done

    if [ "${_GENCONFIG_site_is_standby}" == "true" ]; then
        local list=''
        local var="_GENCONFIG_vdc_${_GENCONFIG_vdc_myid}_node_count"
        for i in $(seq ${!var}); do
            var="_GENCONFIG_vdc_${_GENCONFIG_vdc_myid}_network_${i}_ipaddr"
            local ipaddr=${!var}
            [ -z "${ipaddr}" ] && ipaddr="[${!var6}]"
            list+=" ${ipaddr}"
        done
        echo "standby_seeds_ipaddr=$(echo $list | tr ' ' ',')"
    else
        echo "standby_seeds_ipaddr="
    fi

    _get_props network_ipaddr_effective node_index site_id
}

_is_empty_dir() {
    directory=$1
    find ${directory} -mindepth 1 -print -quit | grep -q . >/dev/null
    echo $?
}

# Currently we ship 2 jline libraries: 1.0 (for cassandra 2.0.10) and 2.13 (for ZooKeeper 3.5).
# Cassandra 2.0.10 need to use jline 1.0 in cassandra-cli, because it's not compatible with jline 2.13
# Default generated cassandra-cli script use jline 2.13, it would result cassandra-cli fail to start.
# This method is used to put jline 1.0 into cassandra-cli's class path instead of jline 2.13.
# Note that: Cassandra doesn't depend on jline since 2.2, so this method should and need to be removed
# after upgrading Cassandra to 2.2 or later version.
_change_cassandracli_dependent_jline() {
    sed -i 's/\(^export CLASSPATH=.*\)jline-2.13.jar\(.*\)/\1jline-1.0.jar\2/' /opt/storageos/bin/cassandra-cli
}

_gen_startup_mode() {
   is_db_empty=$(_is_empty_dir "/data/db")
   is_geodb_empty=$(_is_empty_dir "/data/geodb")
 
   if [ "${_GENCONFIG_mode}" == "redeploy" -a ${is_db_empty} -eq 1 -a  ${is_geodb_empty} -eq 1 ]; then
    echo "startupmode=hibernate" > /data/db/startupmode
    echo "startupmode=hibernate" > /data/geodb/startupmode
  fi 
}

_genconfig_exec _gen_template_cluster   /opt/storageos/conf/db-var.xml      $(_get_dbvar_props)
_genconfig_exec _gen_template           /opt/storageos/conf/db-jmx-var.xml  $(_get_db_jmx_props)
_genconfig_exec _gen_template_cluster   /opt/storageos/conf/db-conf.yaml    $(_get_dbconf_props)
_gen_startup_mode
_change_cassandracli_dependent_jline