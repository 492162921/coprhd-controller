{
  baseKey:"CreateAndMountBlockVolume.Block.Aix",
  serviceId:"Aix-CreateAndMountBlockVolume",
  fields:{
    host:{
      type:"assetType.vipr.aixHost"
    },

    virtualArray:{
      type:"assetType.vipr.virtualArray",
      lockable: true
    },
    
    virtualPool:{
      type:"assetType.vipr.blockVirtualPool",
      lockable: true
    },

    project:{
      type:"assetType.vipr.project",
      lockable: true
    },

	rdfGroup:{
      type:"assetType.vipr.rdfGroup",
      lockable: true,
      required: false,
      hideIfEmpty: true
    },

    name:{
      type:"text",
      validation:{
        min:2,
        max:128
      }
    },

    consistencyGroup:{
      type:"assetType.vipr.consistencyGroup",
      required:false
    },

    size:{
      type:"storageSize",
      validation:{
        min:1
      }
    },
    
    fileSystemType:{
      type: "choice",
      initialValue: "jfs2",
      select: "one",
      options: {
        "jfs2": "jfs2"
      },
      lockable: true
    },
    
    blockSize:{
        type: "choice",
        initialValue: "Default",
        select: "one",
        options: {
          "DEFAULT": "Default",
          "1024": "1k",
          "2048": "2k",
          "4096": "4k",
          "8192": "8k",
          "16384": "16k",
          "32768": "32k",
          "65536": "64k"
        },
        required: false,
        lockable: true
    },
    
    mountPoint:{
      type:"text",
      validation:{
        regEx:"/[A-Za-z0-9/_\.\-]*"
      }
    },

    hlu: {
      type:"number",
      lockable: true,
      required: false,
      initialValue: "-1",
      validation: {
        min:-1
      }
    },
    advanced:{
      type:"group",
      collapsed:true,
      items:{
        portGroup: {
            type:"assetType.vipr.exportVolumeForHostPortGroups",
            required: false,
            hideIfEmpty: true
        },
        exportPathPolicy: {
            type:"assetType.vipr.exportPathPolicies",
            required: false
        }
      }
    }
  }
}
