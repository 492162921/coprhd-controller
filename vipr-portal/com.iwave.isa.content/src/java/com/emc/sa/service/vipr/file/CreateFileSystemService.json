{
  baseKey:"CreateFileSystem.File",
  serviceId:"CreateFileSystem",
  fields:{
    virtualArray:{
      type:"assetType.vipr.fileVirtualArray",
      lockable: true
    },
    
    virtualPool:{
      type:"assetType.vipr.fileVirtualPool",
      lockable: true
    },
    
    project:{
      type:"assetType.vipr.project",
      lockable: true
    },

    volumeName:{
      type:"text",
      validation:{
        min:2,
        max:128
      }
    },
    
    size:{
      type:"storageSize",
      validation:{
        min:1
      }
    },
    
    smartQuota:{
      type:"group",
      collapsed:"true",
      items:{
          adivsoryLimit:{
            type:"text",
            validation:{
              min:0,
              max:100
            }
          },
          
          softLimit:{
            type:"text",
            validation:{
              min:0,
              max:100
            }
          },
          
          gracePeriod:{
            type:"text",
            validation:{
              min:1
            }
          }
        }
      }
    }
}