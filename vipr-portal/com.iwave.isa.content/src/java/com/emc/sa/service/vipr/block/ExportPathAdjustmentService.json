{
    baseKey:"ExportPathAdjustment.Block",
    serviceId:"ExportPathAdjustment",
    useModal: true,
    fields:{
    	host:{
            type:"assetType.vipr.host",
            lockable: true
        },
        virtualArray:{
            type:"assetType.vipr.exportPathVirtualArray",
            lockable: true
        },
        
        minPaths: {
          type:"number",
          lockable: true,
          required: false,
          validation: {
            min:1,
            max:65535
          }
        },
        
        maxPaths: {
          type:"number",
          lockable: true,
          required: false,
          validation: {
            min:1,
            max:65535
          }
        },
        
        pathsPerInitiator: {
          type:"number",
          lockable: true,
          required: false,
          validation: {
            min:1,
            max:65535
          }
        },
        
        storageSystem: {
            type:"assetType.vipr.exportPathStorageSystem"
        },       
        ports:{
            type:"assetType.vipr.exportPathPorts",
            select: "many"
        },

	    exportPathPreview:{
	       type:"modal",
           items:{
                affectedPorts:{
                    type:"assetType.vipr.exportPathAddedPorts",
                    select: "list",
                    required: false,
                    omitNone: true
                },
                removedPorts:{
                    type:"assetType.vipr.exportPathRemovedPorts",
                    select: "list",
                    required: false,
                    omitNone: true
                },
                affectedExports:{
                    type:"assetType.vipr.exportPathAffectedExports",
                    select: "list",
                    required: false,
                    omitNone: true
                }
    	    }
        }
    }
}