{
    baseKey:"ExportPathAdjustment.Block",
    serviceId:"ExportPathAdjustment",
    useModal: true,
    fields:{
    	host:{
            type:"assetType.vipr.host",
            lockable: true
        },
        virtualArray:{
            type:"assetType.vipr.blockVirtualArray",
            lockable: true
        },
        
        minPaths: {
          type:"number",
          lockable: true,
          required: false,
          validation: {
            min:1,
            max:65535
          }
        },
        
        maxPaths: {
          type:"number",
          lockable: true,
          required: false,
          validation: {
            min:1,
            max:65535
          }
        },
        
        pathsPerInitiator: {
          type:"number",
          lockable: true,
          required: false,
          validation: {
            min:1,
            max:65535
          }
        },
        
        advanced:{
          type:"group",
          collapsed:true,
          items:{ 
            storageSystem: {
                type:"assetType.vipr.storageSystem",
                required: false
            },       
            ports:{
                type:"assetType.vipr.exportPathPorts",
                select: "many",
                required: false
            }
          }
        },
        
	    exportPathPreview:{
	       type:"modal",
           items:{
                addedPorts:{
                    type:"assetType.vipr.exportPathAddedPorts",
                    select: "many"
                },
                removedPorts:{
                    type:"assetType.vipr.exportPathRemovedPorts",
                    select: "many"
                },
                affectedExports:{
                    type:"assetType.vipr.exportPathAffectedExports",
                    select: "many"
                }
    	    }
        }
    }
}