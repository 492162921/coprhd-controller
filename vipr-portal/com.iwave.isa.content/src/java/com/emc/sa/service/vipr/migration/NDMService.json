{
  baseKey: "NDM.Migration",
  serviceId: "NDM",
  fields: {
    storageType: {
      type: "assetType.vipr.blockStorageType",
      lockable: true,
      initialValue: "exclusive"
    },
    host: {
      type: "assetType.vipr.host"
    },
    sourceStorageSystem: {
      "type": "assetType.vipr.allStorageSystems",
      "label": "Source Storage System"
    },
    targetStorageSystems: {
      "type": "assetType.vipr.targetStorageSystems",
      "label": "Target Storage System"
    },
    StorageGroups: {
      label: "Storage Groups",
      type: "table",
      items: {   
          storageGroup: {
            label: "Storage Group",
            type: "assetType.vipr.storageConsistencyGroup",
            select: "many",
            assetType: "vipr.storageConsistencyGroup"
          }, 
          maximumPaths: {
              label: "Maximum Paths",
              type: "number",
              initial_value: 2
          },
          targetStoragePorts: {
              label: "Target Storage Ports",
              type: "assetType.vipr.targetSystemStoragePorts",
              select: "many",
              assetType: "vipr.targetSystemStoragePorts"
          }    
      }
    }
