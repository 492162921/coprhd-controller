RUN_DIR=`pwd`
# Devkit related for containerized build
DEVKIT_IMAGE := nile-registry.lss.emc.com:5000/viprcontroller/viprdevkit-sles12:3.0.0.0.13
# for building OVF in viprdevkit container
DOCKER_RUN_OVF_BUILD := docker run --rm -i --net=host --privileged -v "/home/ionixauto/.subversion:/root/.subversion" -v "$(CURDIR):/workspace" -v "/opt/ADG/createAppliance/jobs:/opt/ADG/createAppliance/jobs" -v "/opt/ADG/createAppliance/log:/opt/ADG/createAppliance/log" -v "/opt/downloads/images:/opt/downloads/images" -w "$(CURDIR)" "$(DEVKIT_IMAGE)"


# Default target which will call target in Makefile to build ViPRBase in container
%:: 
	$(DOCKER_RUN_OVF_BUILD) make -f Makefile.local $@ JOB=$(JOB)
