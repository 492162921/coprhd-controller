<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="serviceinfo" class="com.emc.storageos.coordinator.common.impl.ServiceImpl">
        <property name="name" value="storageapisvc"/>
        <property name="id" value="api-${node_index}"/>
        <property name="endpoint" value="http://${node_id}:8080/"/>
        <property name="version" value="1"/>
    </bean>

    <bean id="disasterRecoveryService" class="com.emc.storageos.api.service.impl.resource.DisasterRecoveryService">
        <property name="dbClient" ref="dbclient"/>
        <property name="coordinator" ref="coordinator"/>
        <property name="apiSignatureGenerator" ref="keyGenerator"/>
        <property name="sysUtils" ref="sysUtils" />
        <property name="vdcShortId" value="${vdc_myid}"/>
    </bean>
</beans>
