<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="serviceinfo" class="com.emc.storageos.coordinator.common.impl.ServiceImpl">
		<property name="name" value="authsvc" />
		<property name="id" value="standalone" />
		<property name="endpoint" value="https://localhost:7443" />
		<property name="version" value="1" />
	</bean>

    <bean id="beacon" class="com.emc.storageos.coordinator.client.beacon.impl.ServiceBeaconImpl" init-method="init" destroy-method="stop">
        <property name="zkConnection" ref="zkconn"/>
        <property name="service" ref="serviceinfo"/>
        <property name="siteId" value="${site_id}"/>
    </bean>

</beans>
