<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">



    <!-- <bean id="scaleioDriver" class="com.emc.storageos.driver.scaleio.ScaleIOStorageDriver">
     </bean> -->
     <bean id="storageDriverSimulator" class="com.emc.storageos.driver.driversimulator.StorageDriverSimulator">
     </bean>

     <bean id="hp3PAR" class="com.emc.storageos.hp3par.impl.HP3PARStorageDriver">
    	<property name="ingestHelper" ref="3parIngestionHelper"></property>
    	<property name="hp3parApiFactory" ref="hp3parApiFactory"/>
    	<property name="hp3parUtil" ref="hp3parUtil"/>
    	<property name="snapshotHelper" ref="3parSnapshotHelper"></property>
    	<property name="cloneHelper" ref="3parCloneHelper"></property>
    	<property name="cgHelper" ref="3parCGHelper"></property>
    	<property name="provHelper" ref="3parProvHelper"/>
    	<property name="expunexpHelper" ref="3parExpUnexpHelper"/>
    </bean>
    
    <bean id="3parIngestionHelper" class="com.emc.storageos.hp3par.impl.HP3PARIngestHelper">
    	<property name="hp3parUtil" ref="hp3parUtil"></property>
    </bean>

    <bean id="3parSnapshotHelper" class="com.emc.storageos.hp3par.impl.HP3PARSnapshotHelper">
    	<property name="hp3parUtil" ref="hp3parUtil"></property>
    </bean>

    <bean id="3parCloneHelper" class="com.emc.storageos.hp3par.impl.HP3PARCloneHelper">
    	<property name="hp3parUtil" ref="hp3parUtil"></property>
    </bean>

    <bean id="3parCGHelper" class="com.emc.storageos.hp3par.impl.HP3PARCGHelper">
    	<property name="hp3parUtil" ref="hp3parUtil"></property>
    </bean>

	<bean id="hp3parApiFactory" class="com.emc.storageos.hp3par.connection.HP3PARApiFactory" init-method="init">
		<property name="connectionTimeoutMs" value="30000"/>
		<property name="connManagerTimeout" value="60000"/>
		<property name="socketConnectionTimeoutMs" value="7200000"/>
	</bean>
	
	<bean id="hp3parUtil" class="com.emc.storageos.hp3par.utils.HP3PARUtil">
		<property name="hp3parApiFactory" ref="hp3parApiFactory"/>
	</bean>

	<bean id="3parProvHelper" class="com.emc.storageos.hp3par.impl.HP3PARProvisioningHelper">
    	<property name="hp3parUtil" ref="hp3parUtil"></property>
    </bean>
    
    <bean id="3parExpUnexpHelper" class="com.emc.storageos.hp3par.impl.HP3PARExpUnexpHelper">
    	<property name="hp3parUtil" ref="hp3parUtil"></property>
    </bean>

    <bean id="unManagedVolumeDiscoverer" class="com.emc.storageos.volumecontroller.impl.externaldevice.ExternalDeviceUnManagedVolumeDiscoverer">
        <property name="networkDeviceController" ref="networkDeviceController"/>
        <property name="coordinator" ref="coordinator"/>
    </bean>

    <bean id="partitionManager" class="com.emc.storageos.plugins.common.PartitionManager" />

    <bean id="externaldevice" class="com.emc.storageos.volumecontroller.impl.plugins.ExternalDeviceCommunicationInterface">
         <property name="unManagedVolumeDiscoverer" ref="unManagedVolumeDiscoverer" />
         <property name="partitionManager" ref="partitionManager" />
         <!-- Discovery storage drivers -->
         <property name="drivers">
             <map>
                <!-- <entry key="scaleiosystem" value-ref="scaleioDriver"/> -->
                <entry key="providersystem" value-ref="storageDriverSimulator"/>
                <entry key="driverprovider" value-ref="storageDriverSimulator"/>
                <entry key="hp3par" value-ref="hp3PAR"/>
            </map>
        </property>
    </bean>

</beans>
