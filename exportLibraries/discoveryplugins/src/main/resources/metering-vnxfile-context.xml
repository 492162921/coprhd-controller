<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- Bean definition for VNXFile plugin which will be the starting point 
		of VNX plug-in execution. -->
	<bean id="vnxfile"
		class="com.emc.storageos.volumecontroller.impl.plugins.VNXFileCommunicationInterface">
		<property name="executor" ref="vnxfileexecutor" />
		<property name="namespaces" ref="namespaces" />
		<property name="partitionManager" ref="partitionManager"/>
		<property name="xmlDumpGenerator" ref="fileXMLDumpgenerator"/>
	</bean>

	<bean id="vnxfileexecutor"
		class="com.emc.storageos.volumecontroller.impl.plugins.metering.vnxfile.VNXFileExecutor">
		<property name="generator" ref="commandgenerator" />
        <property name="util" ref="utility" /> 
	</bean>
	<bean id="partitionManager" class="com.emc.storageos.plugins.common.PartitionManager"/>

	<!-- List of Namespaces -->
	<bean id="namespaces"
		class="com.emc.storageos.plugins.common.domainmodel.NamespaceList">
		<property name="nsList">
			<map>
				<entry key="metering-file" value-ref="vnxfilenamespace" />
				<entry key="vnx-file-static-load-metrics" value-ref="vnxfilestaticloadnamespace" />
            </map>
		</property>
	</bean>

	<bean id="vnxfilenamespace"
		class="com.emc.storageos.plugins.common.domainmodel.Namespace">
		<property name="operations">
			<list>
				<ref bean="loginoperation" />
				<ref bean="fileshareinfooperation" />
				<ref bean="fsusageoperation" />
				<ref bean="snapshotoperation" />
				<ref bean="volumestatsoperation" />
				<!-- collecting ip port metrics -->
				<ref bean="vnxdatamoverquery"/>
				<ref bean="vnxdminterfacesquery" />
				<ref bean="vnxstorageportstatsquery" />
				<ref bean="sessioncleanoperation" />
			</list>
		</property>
	</bean>
	
	<bean id="vnxfilestaticloadnamespace"
          class="com.emc.storageos.plugins.common.domainmodel.Namespace">
        <property name="operations">
            <list>
                <ref bean="loginoperation" />
                <ref bean="fscapacitycalccoperation" />
                <ref bean="snapcapacitycalccoperation" />
                <ref bean="sessioncleanoperation" />
            </list>
        </property>
    </bean>
    
    <bean id="fscapacitycalccoperation"
          class="com.emc.storageos.plugins.common.domainmodel.Operation">
        <property name="processor" ref="vnxfsprovcapacityprocessor" />
        <property name="instance" ref="retriever" />
        <property name="method" value="execute" />
        <property name="arguments">
            <list>
                <ref bean="uri" />
                <ref bean="cookie" />
                <ref bean="session" />
                <ref bean="vnxfscapacityquery" />
            </list>
        </property>
    </bean>
    
    <bean id="snapcapacitycalccoperation"
          class="com.emc.storageos.plugins.common.domainmodel.Operation">
        <property name="processor" ref="vnxsnapprovcapacityprocessor" />
        <property name="instance" ref="retriever" />
        <property name="method" value="execute" />
        <property name="arguments">
            <list>
                <ref bean="uri" />
                <ref bean="cookie" />
                <ref bean="session" />
                <ref bean="vnxsnapcapacityquery" />
            </list>
        </property>
    </bean>
	
	
	<bean id="vnxdatamoverquery"
          class="com.emc.storageos.plugins.common.domainmodel.Operation">
        <property name="processor" ref="vnxdatamoverprocessor" />
        <property name="instance" ref="retriever" />
        <property name="method" value="execute" />
        <property name="arguments">
            <list>
                <ref bean="uri" />
                <ref bean="cookie" />
                <ref bean="session" />
                <ref bean="vnxdmquery" />
            </list>
        </property>
    </bean>
    
    <bean id="vnxdminterfacesquery"
          class="com.emc.storageos.plugins.common.domainmodel.Operation">
        <property name="processor" ref="vnxdatamoverinterfaceprocessor" />
        <property name="instance" ref="retriever" />
        <property name="method" value="execute" />
        <property name="arguments">
            <list>
                <ref bean="uri" />
                <ref bean="cookie" />
                <ref bean="session" />
                <ref bean="vnxdminterfacequery" />
            </list>
        </property>
    </bean>
    
    <bean id="vnxstorageportstatsquery"
          class="com.emc.storageos.plugins.common.domainmodel.Operation">
        <property name="processor" ref="vnxstorageportstatsprocessor" />
        <property name="instance" ref="retriever" />
        <property name="method" value="execute" />
        <property name="arguments">
            <list>
                <ref bean="uri" />
                <ref bean="cookie" />
                <ref bean="session" />
                <ref bean="vnxmoverstatsquery" />
            </list>
        </property>
    </bean>
 

	<bean id="loginoperation"
		class="com.emc.storageos.plugins.common.domainmodel.Operation">
		<property name="processor" ref="authprocessor" />
		<property name="instance" ref="retriever" />
		<property name="method" value="dologin" />
		<property name="arguments">
			<list>
				<ref bean="authuri" />
				<ref bean="username" />
				<ref bean="password" />
				<ref bean="portnumber" />
			</list>
		</property>
	</bean>

	<bean id="fileshareinfooperation"
		class="com.emc.storageos.plugins.common.domainmodel.Operation">
		<property name="processor" ref="fileshareinfoprocessor" />
		<property name="instance" ref="retriever" />
		<property name="method" value="execute" />
		<property name="arguments">
			<list>
				<ref bean="uri" />
				<ref bean="cookie" />
				<ref bean="session" />
				<ref bean="filesharequery" />
			</list>
		</property>
	</bean>
	
	<bean id="volumestatsoperation"
		class="com.emc.storageos.plugins.common.domainmodel.Operation">
		<property name="processor" ref="volumestatsprocessor" />
		<property name="instance" ref="retriever" />
		<property name="method" value="execute" />
		<property name="arguments">
			<list>
				<ref bean="uri" />
				<ref bean="cookie" />
				<ref bean="session" />
				<ref bean="volstatsquery" />
			</list>
		</property>
	</bean>


	<bean id="snapshotoperation"
		class="com.emc.storageos.plugins.common.domainmodel.Operation">
		<property name="processor" ref="snapshotprocessor" />
		<property name="instance" ref="retriever" />
		<property name="method" value="execute" />
		<property name="arguments">
			<list>
				<ref bean="uri" />
				<ref bean="cookie" />
				<ref bean="session" />
				<ref bean="snapshotquery" />
			</list>
		</property>
	</bean>

	<bean id="fsusageoperation"
		class="com.emc.storageos.plugins.common.domainmodel.Operation">
		<property name="processor" ref="fsusageprocessor" />
		<property name="instance" ref="retriever" />
		<property name="method" value="execute" />
		<property name="arguments">
			<list>
				<ref bean="uri" />
				<ref bean="cookie" />
				<ref bean="session" />
				<ref bean="fileusagequery" />
			</list>
		</property>
	</bean>

	<bean id="sessioncleanoperation"
		class="com.emc.storageos.plugins.common.domainmodel.Operation">
		<property name="instance" ref="retriever" />
		<property name="method" value="disconnect" />
		<property name="arguments">
			<list>
				<ref bean="uri" />
				<ref bean="cookie" />
				<ref bean="session" />
			</list>
		</property>
	</bean>


	<bean id="fileusagequery"
		class="com.emc.storageos.plugins.common.domainmodel.Argument">
		<property name="creator" ref="argscreator" />
		<property name="method" value="fetchFileSystemUsageStats" />
		<property name="value" value="" />
	</bean>
	
	<bean id="vnxmoverstatsquery"
          class="com.emc.storageos.plugins.common.domainmodel.Argument">
        <property name="creator" ref="argscreator" />
        <property name="method" value="fetchMoverStats" />
        <property name="value" value="movers" />
    </bean>
    
    <bean id="vnxdminterfacequery"
          class="com.emc.storageos.plugins.common.domainmodel.Argument">
        <property name="creator" ref="argscreator" />
        <property name="method" value="fetchMoverInterfacesInfo" />
        <property name="value" value="movers" />
    </bean>
	
	<bean id="vnxdmquery"
        class="com.emc.storageos.plugins.common.domainmodel.Argument">
        <property name="creator" ref="argscreator" />
        <property name="method" value="fetchDataMoverInfo" />
        <property name="value" value="" />
    </bean>
    
    <bean id="vnxfscapacityquery"
        class="com.emc.storageos.plugins.common.domainmodel.Argument">
        <property name="creator" ref="argscreator" />
        <property name="method" value="fetchfscapacityInfo" />
        <property name="value" value="" />
    </bean>
    
    <bean id="vnxsnapcapacityquery"
        class="com.emc.storageos.plugins.common.domainmodel.Argument">
        <property name="creator" ref="argscreator" />
        <property name="method" value="fetchsnapcapacityInfo" />
        <property name="value" value="" />
    </bean>

	<bean id="filesharequery"
		class="com.emc.storageos.plugins.common.domainmodel.Argument">
		<property name="creator" ref="argscreator" />
		<property name="method" value="fetchFileSystemInfo" />
		<property name="value" value="" />
	</bean>	
	
	<bean id="volstatsquery"
		class="com.emc.storageos.plugins.common.domainmodel.Argument">
		<property name="creator" ref="argscreator" />
		<property name="method" value="fetchVolumeStats" />
		<property name="value" value="movers" />
	</bean>	

	<bean id="snapshotquery"
		class="com.emc.storageos.plugins.common.domainmodel.Argument">
		<property name="creator" ref="argscreator" />
		<property name="method" value="fetchCheckpointInfo" />
		<property name="value" value="" />
	</bean>

	<bean id="uri"
		class="com.emc.storageos.plugins.common.domainmodel.Argument">
		<property name="creator" ref="argscreator" />
		<property name="method" value="getReferenceValue" />
		<property name="value" value="uri" />
	</bean>

	<bean id="authuri"
		class="com.emc.storageos.plugins.common.domainmodel.Argument">
		<property name="creator" ref="argscreator" />
		<property name="method" value="getReferenceValue" />
		<property name="value" value="authuri" />
	</bean>

	<bean id="username"
		class="com.emc.storageos.plugins.common.domainmodel.Argument">
		<property name="creator" ref="argscreator" />
		<property name="method" value="getReferenceValue" />
		<property name="value" value="username" />
	</bean>

	<bean id="password"
		class="com.emc.storageos.plugins.common.domainmodel.Argument">
		<property name="creator" ref="argscreator" />
		<property name="method" value="getReferenceValue" />
		<property name="value" value="password" />
	</bean>
	
	<bean id="cookie"
		class="com.emc.storageos.plugins.common.domainmodel.Argument">
		<property name="creator" ref="argscreator" />
		<property name="method" value="getReferenceValue" />
		<property name="value" value="Cookie" />
	</bean>

	<bean id="session"
		class="com.emc.storageos.plugins.common.domainmodel.Argument">
		<property name="creator" ref="argscreator" />
		<property name="method" value="getReferenceValue" />
		<property name="value" value="CelerraConnector-Sess" />
	</bean>


	<!-- Config Processor bean definition -->
	<bean id="fsusageprocessor"
		class="com.emc.storageos.volumecontroller.impl.plugins.metering.vnxfile.processor.VNXFileSystemUsageProcessor">
		<property name="zeroRecordGenerator" ref="zeroRecordGenerator" />
		<property name="unmarshaller" ref="unmarshaller"/>
		<property name="statsColumnInjector" ref="statsColumnInjector" />
	</bean>

	<bean id="authprocessor"
		class="com.emc.storageos.volumecontroller.impl.plugins.metering.vnxfile.processor.VNXLoginProcessor">
    </bean>
    
	<bean id="snapshotprocessor"
		class="com.emc.storageos.volumecontroller.impl.plugins.metering.vnxfile.processor.VNXSnapshotProcessor">
	    <property name="unmarshaller" ref="unmarshaller"/>
	</bean>
	
	<bean id="vnxdatamoverinterfaceprocessor"
          class="com.emc.storageos.volumecontroller.impl.plugins.metering.vnxfile.processor.VNXDataMoverInterfaceProcessor">
        <property name="unmarshaller" ref="unmarshaller"/>
    </bean>
	
	<bean id="vnxdatamoverprocessor"
          class="com.emc.storageos.volumecontroller.impl.plugins.metering.vnxfile.processor.VNXDataMoverIdProcessor">
        <property name="unmarshaller" ref="unmarshaller"/>
    </bean>
    
    <bean id="vnxstorageportstatsprocessor"
          class="com.emc.storageos.volumecontroller.impl.plugins.metering.vnxfile.processor.VNXStoragePortStatsProcessor">
        <property name="unmarshaller" ref="unmarshaller"/>
        <property name="portMetricsProcessor" ref="portMetricsProcessor"/> 
    </bean>
		
	<bean id="fileshareinfoprocessor"
		class="com.emc.storageos.volumecontroller.impl.plugins.metering.vnxfile.processor.VNXFileSystemInfoProcessor">
		<property name="unmarshaller" ref="unmarshaller"/>
	</bean>
	
	<bean id="vnxfsprovcapacityprocessor"
        class="com.emc.storageos.volumecontroller.impl.plugins.metering.vnxfile.processor.VNXFSProvCapacityProcessor" >
    	<property name="unmarshaller" ref="unmarshaller"/>
    </bean>
    <bean id="vnxsnapprovcapacityprocessor"
        class="com.emc.storageos.volumecontroller.impl.plugins.metering.vnxfile.processor.VNXSnapProvCapacityProcessor" >
    	<property name="unmarshaller" ref="unmarshaller"/>
    </bean>
		
    <bean id="volumestatsprocessor"
        class="com.emc.storageos.volumecontroller.impl.plugins.metering.vnxfile.processor.VNXVolumeStatsProcessor" >
    	<property name="unmarshaller" ref="unmarshaller"/>
    </bean>
	<!-- Bean id for DataRetriever -->
	<bean id="retriever"
		class="com.emc.storageos.plugins.metering.vnxfile.DataRetriever">
		<property name="client" ref="client" />
		<property name="protocol" ref="protocol" />
		<!-- Set timeout in millis -->
		<property name="timeout" value="60000" />
	</bean>

        <bean id="protocol"
                class="com.emc.storageos.plugins.metering.vnxfile.VNXFileProtocol">
                <property name="protocolType" value="https" />
                <property name="protocolSocketFactory" ref="protocolfactory" />
        </bean>

	<bean id="protocolfactory"
		class="com.emc.storageos.plugins.metering.vnxfile.VNXFileProtocolSocketFactory">
		<property name="trustManagers" ref="trustManagers" />
	</bean>

	<bean id="trustManagers"
		class="com.emc.storageos.plugins.metering.vnxfile.VNXFileX509TrustManager" />

	<!-- Bean id for httpclient instance -->
	<bean id="client" class="org.apache.commons.httpclient.HttpClient" />

	<bean id="commandgenerator"
		class="com.emc.storageos.plugins.common.commandgenerator.CommandGenerator">
		<property name="util" ref="utility" />
	</bean>

	<bean id="argscreator" class="com.emc.storageos.plugins.metering.vnxfile.VNXFileArgsCreator">
		<constructor-arg ref="utility" />
		<property name="vnxFileRequest" ref="vnxFileRequest" />
	</bean>


	<bean id="portnumber" class="com.emc.storageos.plugins.common.domainmodel.Argument">
		<property name="creator" ref="argscreator" />
		<property name="method" value="getReferenceValue" />
		<property name="value" value="portnumber" />
	</bean>
	
	<!-- Bean id for utility -->
	<bean id="utility" class="com.emc.storageos.plugins.common.Util" />

	<bean id="zeroRecordGenerator"
		class="com.emc.storageos.volumecontroller.impl.plugins.metering.file.FileZeroRecordGenerator" />
    
    <bean id="marshaller" factory-bean="jaxbContext" factory-method="createMarshaller" />
    
    <bean id="unmarshaller" factory-bean="jaxbContext" factory-method="createUnmarshaller" />

	<bean id="jaxbContext" class="javax.xml.bind.JAXBContext" factory-method="newInstance" >
		<constructor-arg><value>com.emc.nas.vnxfile.xmlapi</value></constructor-arg>
	</bean>
	
    <bean id="vnxFileRequest" class="com.emc.storageos.plugins.metering.vnxfile.VNXFileInputRequestBuilder">
        <property name="marshaller" ref="marshaller"/>
    </bean>
    
    <bean id="fileXMLDumpgenerator" class="com.emc.storageos.volumecontroller.impl.plugins.metering.file.FileXMLStatsDumpGenerator" />
    <bean id="statsColumnInjector" class="com.emc.storageos.volumecontroller.impl.plugins.metering.file.FileDBInsertion" />
    <bean id="portMetricsProcessor" class="com.emc.storageos.volumecontroller.impl.plugins.metering.smis.processor.PortMetricsProcessor" >
    </bean>
</beans>
